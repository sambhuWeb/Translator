{
    "name": "elt/translator",
    "description": "Package for Translating language from various translator such as Google, Microsoft, Lingvanex",
    "type": "composer",
    "license": "MIT",
    "scripts" : {
        "test" : [
            "vendor/bin/phpunit"
        ]
    },
    "authors": [
        {
            "name": "Sambhu Singh",
            "email": "sambhu.raj.singh@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Translator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translator\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^7"
    },
    "require": {
        "ext-json": "*",
        "guzzlehttp/psr7": "^1.6.1",
        "guzzlehttp/guzzle": "7.0.1",
        "jms/serializer": "3.9.0",
        "google/cloud-translate": "^1.12"
    }
}
